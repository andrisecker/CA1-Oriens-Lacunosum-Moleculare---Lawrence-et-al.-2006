<?xml version="1.0" encoding="UTF-8"?>
<neuroml xmlns="http://www.neuroml.org/schema/neuroml2" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://www.neuroml.org/schema/neuroml2  https://raw.github.com/NeuroML/NeuroML2/development/Schemas/NeuroML2/NeuroML_v2beta2.xsd" 
         id="olm1">
    
    <Include file="../Nasoma.nml"/>
    <Include file="../Ikdrf.nml"/>
    <Include file="../Ikdrs.nml"/>
    <Include file="../IKa.nml"/>
    <Include file="../Ih.nml"/>
    <Include file="../IMmintau.nml"/>

    <ionChannelPassive id="leak" conductance="0.05nS" species="non_specific"/>
    <!-- <ionChannelPassive id="Kleak" conductance="0.05nS" species="k" /> -->
    
<!-- Cellular properties -->

    <cell id="olm1">

        <morphology id="just_a_cylinder">

            <segment id="0" name="Soma">
                <proximal x="0.0" y="0.0" z="0.0" diameter="10.0"/>
                <distal x="0.0" y="0.0" z="3.1831" diameter="10.0"/>
            </segment>

            <segmentGroup id="soma_group">
                <member segment="0"/>
            </segmentGroup>

        </morphology>


        <biophysicalProperties id="biophys">

            <membraneProperties>
                <channelDensity condDensity="0.01123mS_per_cm2" id="passive" ionChannel="leak" erev="-64.164 mV" ion="non_specific"/>
                <!-- <channelDensity condDensity="0.0032258mS_per_cm2" id="Kpassive" ionChannel="Kleak" erev="-95 mV" ion="k"/> -->
                <!-- 1 pS_per_um2 = 0.1 mS_per_cm2 -->
                <channelDensity condDensity="10.7mS_per_cm2" id="Nasoma" ionChannel="Nasoma" erev="90.0 mV" ion="na"/> <!-- 10.7 -->
                <channelDensity condDensity="0.6mS_per_cm2" id="Ikdrf" ionChannel="Ikdrf" erev="-95.0 mV" ion="k"/> <!-- 0.6 -->
                <channelDensity condDensity="0.23mS_per_cm2" id="Ikdrs" ionChannel="Ikdrs" erev="-95.0 mV" ion="k"/> <!-- 0.23 -->
                <channelDensity condDensity="0.25mS_per_cm2" id="IKa" ionChannel="IKa" erev="-95.0 mV" ion="k"/> <!-- 0.25 -->
                <channelDensity condDensity="0.075mS_per_cm2" id="IMmintau" ionChannel="IMmintau" erev="-95.0 mV" ion="k"/> <!-- 0.25 -->
                <channelDensity condDensity="0.05mS_per_cm2" id="Ih" ionChannel="Ih" erev="-32.9 mV" ion="h"/> <!-- 0.05 -->
                
                <spikeThresh value="0 mV"/>
                <specificCapacitance value="0.9 uF_per_cm2"/>
                <initMembPotential value="-65.0 mV"/>

            </membraneProperties>

            <intracellularProperties>
                <resistivity value="300 ohm_cm"/>
            </intracellularProperties>

        </biophysicalProperties>

    </cell>

<!-- Point process: Current clamp -->
     
    <pulseGenerator id="IClamp" delay="100ms" duration="200ms" amplitude="2pA" />

<!-- Create a single-cell network -->

    <network id="net1" type="networkWithTemperature" temperature = "24 degC">
        <population id="pop" component="olm1" type="populationList" size="1">
            <instance id="0">
                <location x="0" y="0" z="0"/>
            </instance>
        </population>

        <inputList id="IClamp" component="IClamp" population="pop">
            <input id="0" target="../pop/0/olm1" destination="synapses"/>
        </inputList>

    </network>

</neuroml>
