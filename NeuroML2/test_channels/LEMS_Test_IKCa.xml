<?xml version='1.0' encoding='UTF-8'?>
<Lems>

  <!-- CA1 OLM cell -->

    <Target component="sim1"/>

    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>

    <Include file="../IKCa.channel.nml"/>
    <Include file="LawrenceOLM_Test_IKCa.net.nml"/>
    <Include file="CaClamp.nml"/>
 
<!-- Simulation specifications -->

    <Simulation id="sim1" length="500ms" step="0.01ms" target="net1">

        <Display id="d1" title="Lawrence 2006 CA1 OLM cell with 2pA input" timeScale="1ms" xmin="-10" xmax="510" ymin="-80" ymax="40">
            <Line id="OLM V" quantity="pop/0/olm1/v" scale="1mV" color="#0000FF" timeScale="1ms"/>
        </Display>
        
        <Display id="d2" title="Channel prop." timeScale="1ms" xmin="-10" xmax="510" ymin="-0.1" ymax="1.1">
            <Line id="o" quantity="pop/0/olm1/biophys/membraneProperties/IKCa_all/IKCa/o/q" scale="1" timeScale="1ms" color="0000FF"/>
            <Line id="o_inf" quantity="pop/0/olm1/biophys/membraneProperties/IKCa_all/IKCa/o/inf" scale="1" timeScale="1ms" color="00FF00"/>
            <!--<Line id="o_tau" quantity="pop/0/olm1/biophys/membraneProperties/IKCa/IKCa/o/tau" scale="1" color="FF0000"/>-->          
        </Display>
        
        <Display id="d3" title="Soma [Ca2+]" timeScale="1ms" xmin="-10" xmax="510" ymin="-0.0005" ymax="0.005">
            <Line id="[Ca2+]" quantity="pop/0/olm1/caConc" scale="1mM" timeScale="1ms" color="0000FF"/>
        </Display>

        <OutputFile id="of0" fileName="lawrenceolm.dat">
            <OutputColumn id="olm" quantity="pop/0/olm1/v"/>
        </OutputFile>
      
    </Simulation>
  
</Lems>