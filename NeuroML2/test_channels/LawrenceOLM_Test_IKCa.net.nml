<?xml version="1.0" encoding="UTF-8"?>
<neuroml xmlns="http://www.neuroml.org/schema/neuroml2" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://www.neuroml.org/schema/neuroml2  https://raw.github.com/NeuroML/NeuroML2/development/Schemas/NeuroML2/NeuroML_v2beta2.xsd" 
         id="olm1">
    
    <include href="../IKCa.channel.nml"/>
    <include href="CaClamp.nml"/>

    <ionChannelPassive id="leak" conductance="0.05nS" species="non_specific"/>
    
    <concentrationModel id="OLM_CaPool" type="decayingPoolConcentrationModel"
                        restingConc="7.55e-11 mol_per_cm3"
                        decayConstant="10.0 ms"
                        shellThickness="8.4e-6 cm"/>
    
<!-- Cellular properties -->

    <cell id="olm1">

        <morphology id="just_a_cylinder">

            <segment id="0" name="Soma">
                <proximal x="0.0" y="0.0" z="0.0" diameter="10.0"/>
                <distal x="0.0" y="0.0" z="3.1831" diameter="10.0"/>
            </segment>

            <segmentGroup id="soma_group">
                <member segment="0"/>
            </segmentGroup>

        </morphology>


        <biophysicalProperties id="biophys">

            <membraneProperties>
                <channelDensity condDensity="0.01123mS_per_cm2" id="leak_all" ionChannel="leak" erev="-64.164 mV" ion="non_specific"/>
                
                <channelDensity condDensity="0.055mS_per_cm2" id="IKCa_all" ionChannel="IKCa" erev="-95.0mV" ion="k"/> <!-- 0.055 -->
                
                <spikeThresh value="0 mV"/>
                <specificCapacitance value="0.9 uF_per_cm2"/>
                <initMembPotential value="-65.0 mV"/>

            </membraneProperties>

            <intracellularProperties>
                
                
                <species id="ca" ion="ca" concentrationModel="OLM_CaPool" initialConcentration="5.0e-11 mol_per_cm3" initialExtConcentration="2.0e-6 mol_per_cm3"/>
                
                <species id="ca" ion="ca" concentrationModel="CaClamp" initialConcentration="5.0e-11 mol_per_cm3" initialExtConcentration="2.0e-6 mol_per_cm3"/>
                
                <resistivity value="300 ohm_cm"/>
            </intracellularProperties>

        </biophysicalProperties>

    </cell>

<!-- Point process: Current clamp -->
     
    <pulseGenerator id="IClamp1" delay="100ms" duration="100ms" amplitude="2pA" />
    <pulseGenerator id="IClamp2" delay="300ms" duration="100ms" amplitude="2pA" />

<!-- Create a single-cell network -->

    <network id="net1" type="networkWithTemperature" temperature = "24 degC">
        
        <population id="pop" component="olm1" type="populationList" size="1">
            <instance id="0">
                <location x="0" y="0" z="0"/>
            </instance>
        </population>

        <inputList id="IClamp1" component="IClamp1" population="pop">
            <input id="0" target="../pop/0/olm1" destination="synapses"/>
        </inputList>
        <inputList id="IClamp2" component="IClamp2" population="pop">
            <input id="0" target="../pop/0/olm1" destination="synapses"/>
        </inputList>

    </network>

</neuroml>
