<?xml version='1.0' encoding='UTF-8'?>
<Lems>

    <Target component="sim1"/>

    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>

    <Include file="../../Capool.channel.nml"/>
    <Include file="LawrenceOLM_test_Ca.net.nml"/>
 
    <!-- Simulation specifications -->
    <Simulation id="sim1" length="50ms" step="0.001ms" target="net1">

      <Display id="d1" title="Membrane Potential (mV)" timeScale="1ms" xmin="0" xmax="50" ymin="-70" ymax="-10">
        <Line id="V" quantity="pop/0/olm1/v" scale="1mV"  color="#ffffff" timeScale="1ms"/>
      </Display>

      <Display id="d2" title="Internal Ca concentration (mM)" timeScale="1ms" xmin="0" xmax="50" ymin="0" ymax="0.1">
        <Line id="caConc" quantity="pop/0/olm1/caConc" scale="1e-6 mM"  color="#ff0000" timeScale="1ms"/>
      </Display>
      
      <Display id="d3" title="External Ca concentration (mM)" timeScale="1ms" xmin="0" xmax="50" ymin="1.5" ymax="2.5">
        <Line id="caConcExt" quantity="pop/0/olm1/caConcExt" scale="1e-6 mM"  color="#0000ff" timeScale="1ms"/>
      </Display>

      <OutputFile id="of0" fileName="lems_ca.dat">
        <OutputColumn id="v" quantity="pop/0/olm1/v"/>
        <OutputColumn id="ca_i" quantity="pop/0/olm1/caConc"/>
        <OutputColumn id="ca_e" quantity="pop/0/olm1/caConcExt"/>
      </OutputFile>
    
    </Simulation>
  
</Lems>